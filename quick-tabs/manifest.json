{
    "name": "Quick Tabs",

    "version": "0.9.9",

    "description": "A quick tab list and switch plugin inspired by the intelliJ IDEA java IDE",

    "background_page": "background.html",

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "assets/icon-32.png",
        "default_title": "Quick Tabs",
        "popup": "popup.html"
    },

    "content_scripts": [
        {
            "js": [ "js/jquery-1.3.2.min.js", "js/jquery.hotkeys-0.7.9.js", "contentScript.js" ],
            "matches": [ "http://*/*", "https://*/*" ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],

    "permissions": ["tabs"],

    "icons": {
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    }
}