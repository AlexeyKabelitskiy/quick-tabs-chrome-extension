{
    "name": "Quick Tabs",
    "version": "0.1.0",

    "description": "A quick tab list and switch plugin inspired by the intelliJ IDEA java IDE",

    "background_page": "background.html",

    "browser_action": {
        "default_icon": "assets/icon-32.png",
        "default_title": "Quick tabs (Ctrl + e)",      // optional; shown in tooltip
        "popup": "popup.html",
        "keyboard": "Ctrl + e"
    },

    "content_scripts": [ {
       "js": [ "contentScript.js" ],
       "matches": [ "http://*/*", "https://*/*", "file://*" ],
       "run_at": "document_start"
    }],


    "permissions": ["tabs"],


    "icons": {
		"32": "assets/icon-32.png",
		"128": "assets/icon-128.png"
    }
}